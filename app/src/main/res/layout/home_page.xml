<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:fontFamily="@font/eastarjetmedium"
                    android:includeFontPadding="false"
                    android:text="안녕하세요, 톡기님!\n오늘도 퍼즐 조각을 모아봐요.">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/location_icon">
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="서울특별시 역삼동"
                        android:textSize="18dp"
                        android:fontFamily="@font/eastarjetmedium"
                        android:includeFontPadding="false">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/puzzle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/puzzle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/puzzle7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/puzzle9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/channel_01"
                        android:background="@drawable/img_round"
                        android:adjustViewBounds="true"
                        android:layout_margin="2dp">
                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="7 / 9"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:fontFamily="@font/eastarjetmedium"
                    android:includeFontPadding="false"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="모음"
                    android:textSize="24dp"
                    android:fontFamily="@font/eastarjetmedium"
                    android:includeFontPadding="false"
                    >
                </TextView>
                <android.widget.Button
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    android:text="보상 받기"
                    android:textSize="19dp"
                    android:fontFamily="@font/eastarjetmedium"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:background="@drawable/button_round">
                </android.widget.Button>
            </LinearLayout>
</LinearLayout>